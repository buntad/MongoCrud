<%- include ('partials/_header.ejs') -%>


<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form  action="/edit/<%= url._id %>" method="POST">
            <div class="form-group">
              <input type="text" name="urllong" placeholder="insert the url" class="form-control" value="<%= url.urllong %>">
            </div>
            <div class="form-group">
              <textarea name="description" cols="80" class="form-control" placeholder="insert a description"><%= url.description %></textarea>
            </div>
            <button type="submit"  class="btn btn-primary btn-block">
                Update
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


